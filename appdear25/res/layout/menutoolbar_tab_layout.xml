<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/parent">
	<!--鍔ㄦ�鏄剧ず鐣岄潰 -->
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/body"
		android:orientation="vertical"
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:background="#ffffff"
		android:layout_weight="1">
	</LinearLayout>
	<!--搴曢儴鍔熻兘鑿滃崟鏍� -->
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="2dp"
		android:layout_width="fill_parent"
		android:background="#ff9930"
		></LinearLayout>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:background="@color/white"
		>
	<ImageView
	     android:src="@drawable/head_" 
	    android:id="@+id/cursor"
	    android:scaleType="matrix"
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"> 
	  </ImageView>
	<LinearLayout
		android:id="@+id/bottomlist"
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		>
		<RelativeLayout
			android:id="@+id/home"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/firstpage_bg"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/main_page_btn_2"
				android:layout_centerInParent="true" />
			<ImageView
				android:id="@+id/firstpage_img"
				android:src="@drawable/main_page_btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/category"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/category_bg"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/category_page_btn_2"
				android:layout_centerInParent="true" />
			<ImageView
				android:id="@+id/category_img"
				android:src="@drawable/category_page_btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/ranking"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/ranking_bg"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/ranking_page_btn_2"
				android:layout_centerInParent="true" />
			<ImageView
				android:id="@+id/ranking_img"
				android:src="@drawable/ranking_page_btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/search"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/search_bg"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/search_page_btn_2"
				android:layout_centerInParent="true" />
			<ImageView
				android:id="@+id/search_img"
				android:src="@drawable/search_page_btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/more"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/more_bg"
				android:visibility="gone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/more_page_btn_2"
				android:layout_centerInParent="true" />
			<ImageView
				android:id="@+id/more_img"
				android:src="@drawable/more_page_btn_1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true" />
			<TextView android:id="@+id/numView"
			    android:background="@drawable/main_num"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
 				android:textSize="12sp"
                android:visibility="gone"
                android:textColor="@color/white"
                android:layout_marginRight="7dp"
				android:layout_alignParentRight="true"/>
		</RelativeLayout>
	</LinearLayout>
	</LinearLayout>
</LinearLayout>