<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_marginRight="10dp"
		android:layout_marginLeft="10dp"
		android:layout_weight="15"
		android:layout_height="0dp">
		<TextView
			android:id="@+id/show"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="使用手机号注册成为爱皮会员，您将享受到更多服务和优惠政策。"
			android:textSize="20sp"
			android:textColor="@color/white" />
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="本次注册将使用您的手机发送一条普通短信。"
			android:textSize="20sp"
			android:textColor="@color/white" />
	</LinearLayout>
	<RelativeLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:paddingTop="30dp"
		android:paddingLeft="10dp"
		android:paddingRight="10dp"
		android:layout_weight="7"
		android:paddingBottom="30dp">
		<CheckBox
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:checked="true"
			android:id="@+id/user_checkbox"
			android:button="@drawable/radiobuttonselect" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="同意"
			android:textSize="20sp"
			android:textColor="@color/black"
			android:layout_toRightOf="@+id/user_checkbox"
			android:id="@+id/textview_read" />
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/textview_read"
			android:text="@string/lookat"
			android:textSize="20sp"
			android:textColor="@color/deepskyblue"
			android:id="@+id/lookat_look"
			android:clickable="true" />
	</RelativeLayout>
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:layout_weight="7">
		<Button
			android:layout_width="150dp"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:text="确定"
			android:textSize="20sp"
			android:id="@+id/alter_button" />
		<Button
			android:layout_width="150dp"
			android:layout_height="fill_parent"
			android:gravity="center"
			android:text="取消"
			android:textSize="20sp"
			android:id="@+id/alter_button_cancle" />
	</LinearLayout>
</LinearLayout>