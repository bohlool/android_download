<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:id="@+id/update_layout_"
	android:gravity="center"
	android:background="#ffffff"
	android:paddingTop="15dp"
	android:paddingBottom="15dp"
	android:layout_gravity="center"
	>

	<RelativeLayout
	    android:id="@+id/size_version_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp" >

		
			<LinearLayout
				android:layout_width="wrap_content"
				android:id="@+id/updeinfo_list_container"
				android:orientation="vertical"
				 android:layout_marginLeft="15dp"
			    android:layout_marginRight="15dp"
				android:layout_height="wrap_content">
				<!-- 动态添加控件区域 -->
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="test" />
				<!-- 动态添加控件区域 -->
			</LinearLayout>
		<LinearLayout
			android:id="@+id/buttonlayout"
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			 android:layout_marginTop="10dp"
			  android:layout_marginLeft="20dp"
			    android:layout_marginRight="20dp"
			 android:layout_below="@+id/updeinfo_list_container"
			android:layout_marginBottom="20dp">
			<!-- 功能按钮 -->
			
				<TextView
					android:layout_width="wrap_content"
					android:text="卸载"
					android:id="@+id/uninstall"
					android:textColor="#ffffff"
					android:background="@drawable/download_button_item_state"
					android:textSize="16sp"
					android:clickable="true"
					android:paddingLeft="15dp"
					android:gravity="center"
					android:paddingRight="15dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					></TextView>
				<TextView
					android:layout_width="wrap_content"
					android:text="取消"
					android:id="@+id/cannel"
					android:textColor="#ffffff"
					android:background="@drawable/download_button_item_state"
					android:textSize="16sp"
					android:gravity="center"
					android:clickable="true"
					android:paddingLeft="15dp"
					android:paddingRight="15dp"
					android:layout_weight="1"
					android:layout_height="wrap_content"
					 />
		</LinearLayout>
	</RelativeLayout>
</RelativeLayout>