<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<!--top content -->

	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/ScrollView2"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="vertical"
		android:layout_above="@+id/bottom_it"
		android:padding="10dp"
		android:background="@color/white"
		android:layout_below="@+id/topImageLogo">
		<LinearLayout
			android:id="@+id/middleContent"
			android:layout_weight="9"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:paddingTop="10dp">
			<!-- fist -->
			<LinearLayout
				android:layout_weight="1"
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					android:textSize="25sp"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:textColor="@color/black1"
					android:padding="5dp"
					android:gravity="center"
					android:text="新用户注册" />
				<TextView
					android:textSize="15sp"
					android:textColor="#000000"
					android:padding="3dp"
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:visibility="gone"
					android:gravity="center"
					android:text="目前只支持用户手机找回密码，建议您使用手机号码注册会员。验证成功可获得10积分" />
				<RelativeLayout
					android:layout_weight="1"
					android:layout_marginTop="5dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/reg_layout"
					android:clickable="true"
					android:visibility="gone">
					<CheckBox
						android:padding="5dp"
						android:layout_centerVertical="true"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:button="@drawable/radiobuttonselect"
						android:layout_toLeftOf="@+id/phone_regt"
						android:id="@+id/phone_reg"
						android:textColor="@color/black1" />
					<TextView
						android:text="手机号注册"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/phone_regt"
						android:textSize="20sp"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"
						android:textColor="@color/black1" />
				</RelativeLayout>
			</LinearLayout>
			<LinearLayout
				android:layout_weight="1"
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linearLayout2"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:paddingBottom="3dp">
					<TextView
						android:layout_marginLeft="10dp"
						android:layout_height="wrap_content"
						android:text="@string/userNameTip"
						android:layout_width="wrap_content"
						android:id="@+id/userReg_tv_nameTip"
						android:layout_marginTop="10dp"
						android:textColor="#000000"
						android:textSize="15.0dip" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1">
					<RelativeLayout
						android:id="@+id/RelativeLayout02"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<EditText
							android:id="@+id/user_reg_edit_account"
							android:background="@drawable/edit_login"
							android:paddingLeft="5.0sp"
							android:saveEnabled="true"
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:layout_marginLeft="5.0dip"
							android:layout_marginRight="5.0dip"
							android:textSize="15.0dip"
							android:singleLine="true"
							android:layout_marginBottom="5.0px"
							android:maxLength="25"
							android:layout_alignParentTop="true" />
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>

			<!-- second -->
			<LinearLayout
				android:layout_weight="1"
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linearLayout2"
					android:paddingBottom="3dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_width="wrap_content"
					android:baselineAligned="true"
					android:orientation="horizontal">
					<TextView
						android:layout_marginLeft="10dp"
						android:layout_height="wrap_content"
						android:text="@string/userPwdTip"
						android:textColor="#000000"
						android:layout_width="wrap_content"
						android:id="@+id/userReg_tv_pwdTip"
						android:layout_marginTop="10dp" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/fistItem"
					android:layout_weight="1">
					<RelativeLayout
						android:id="@+id/RelativeLayout02"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<EditText
							android:id="@+id/user_reg_edit_pwd"
							android:background="@drawable/edit_login"
							android:paddingLeft="5.0sp"
							android:saveEnabled="true"
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:layout_marginLeft="5.0dip"
							android:layout_marginRight="5.0dip"
							android:layout_marginBottom="5.0px"
							android:textSize="15.0dip"
							android:inputType="textPassword"
							android:maxLength="16"
							android:layout_alignParentTop="true" />
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>

			<!-- three -->
			<LinearLayout
				android:layout_weight="1"
				android:layout_marginTop="5dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/linearLayout2"
					android:paddingBottom="3dp"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:layout_weight="1"
					android:layout_width="wrap_content">
					<TextView
						android:layout_marginLeft="10dp"
						android:layout_height="wrap_content"
						android:text="@string/userPwdReTip"
						android:textColor="#000000"
						android:layout_width="wrap_content"
						android:id="@+id/userReg_tv_rePwdTip"
						android:layout_marginTop="10dp" />
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:id="@+id/fistItem"
					android:layout_weight="1">
					<RelativeLayout
						android:id="@+id/RelativeLayout02"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content">
						<EditText
							android:id="@+id/user_reg_edit_rePwd"
							android:background="@drawable/edit_login"
							android:paddingLeft="5.0sp"
							android:saveEnabled="true"
							android:layout_width="fill_parent"
							android:layout_height="40dip"
							android:layout_marginLeft="5.0dip"
							android:layout_marginRight="5.0dip"
							android:textSize="15.0dip"
							android:inputType="textPassword"
							android:layout_marginBottom="5.0px"
							android:maxLength="16"
							android:layout_alignParentTop="true" />
					</RelativeLayout>
				</LinearLayout>
			</LinearLayout>

			<!-- protocol -->
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="25.0dip"
				android:layout_gravity="center_horizontal">
				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/LinearLayout">
					<CheckBox
						android:id="@+id/user_reg_check_protocol"
						android:layout_width="25dp"
						android:layout_height="25dp"
						android:button="@drawable/radiobuttonselect"
						android:checked="true" />
					<TextView
						android:text="同意"
						android:id="@+id/read"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:textColor="@color/black" />
					<TextView
						android:text="@string/userAgreeProtocol"
						android:id="@+id/readprotocol"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="14sp"
						android:textColor="@color/red"
						android:clickable="true" />
				</LinearLayout>

			</LinearLayout>
			<Button
				android:id="@+id/user_reg_tv_login_text"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				android:textSize="20sp"
				android:textColor="#ffffff"
				android:background="@drawable/download_button_item_state"
				android:text="注册"
				android:layout_gravity="center_horizontal" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
