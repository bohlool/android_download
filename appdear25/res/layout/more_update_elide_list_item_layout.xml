<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<RelativeLayout  
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/soft_list_bg" >
 <FrameLayout
            android:id="@+id/imagelayout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="7dp" >
             <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/yuan1" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/soft_lsit_icon_default" />
  <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/yuan" />
  </FrameLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/uninstall"
        android:layout_toRightOf="@+id/imagelayout"
        android:singleLine="true"
        android:textColor="@color/soft_list_item_tile_color"
        android:textSize="@dimen/tittle_text_size" />

    <Button
        android:id="@+id/canle_elide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/hulue_cancel_button2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="#2c9bde"
        android:textSize="12sp" />

    <LinearLayout
        android:id="@+id/desc_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_toLeftOf="@+id/canle_elide"
        android:layout_toRightOf="@id/imagelayout"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@color/soft_list_item_desc_color"
            android:textSize="@dimen/desc_text_size" />

        <TextView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:textColor="@color/soft_list_item_desc_color"
            android:textSize="@dimen/desc_text_size" />
    </LinearLayout>

</RelativeLayout>

 <RelativeLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            
            android:background="@drawable/update_description" >
          <TextView  
             android:id="@+id/topTextView"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
            android:textColor="@color/soft_list_item_desc_color"  
            android:textSize="16sp"       
             android:text="更新说明"/>
             
          <TextView  
          android:id="@+id/descriptionTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="3dp"
        
              android:layout_below="@id/topTextView"
              android:textSize="14sp"
             
            />
            <Button   
             android:id="@+id/shrinkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
             
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"           
            android:layout_below="@id/descriptionTextView"
             android:background="@drawable/update_expansion" />
          
        </RelativeLayout>

</LinearLayout>